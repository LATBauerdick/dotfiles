{
  "title": "Application switching with option key",
  "rules": [
    {
      "description": "Application Switching with control tab/grave.",
      "manipulators": [ {
          "type": "basic",
          "from": { "key_code": "tab", "modifiers": { "mandatory": [ "left_control" ], "optional": [ "any" ] } },
          "to": { "key_code": "tab", "modifiers": [ "left_command" ] } }
      , {
          "type": "basic",
          "from": { "key_code": "grave_accent_and_tilde", "modifiers": { "mandatory": [ "left_control" ], "optional": [ "any" ] } },
          "to": { "key_code": "grave_accent_and_tilde", "modifiers": [ "left_command" ]}
        }
      ]
    }
  ]
}
